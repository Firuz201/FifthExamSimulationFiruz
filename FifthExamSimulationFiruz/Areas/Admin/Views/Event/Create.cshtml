@model EventCreateVM


<div class="container">

	<div class="row">

        <form method="post">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input class="form-control" asp-for="Title" placeholder="Enter email">
                <span asp-validation-for="Title"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <input class="form-control" asp-for="Description" placeholder="Enter email">
                <span asp-validation-for="Description"></span>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

	</div>

</div>